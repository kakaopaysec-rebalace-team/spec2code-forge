# =================================================
# AI Asset Rebalancing System - Environment Configuration
# =================================================

# Application Configuration
APP_NAME="AI Asset Rebalancing System"
APP_VERSION="2.0.0"
DEBUG=True
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=asset_rebalancing.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# AI/ML Service Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# Financial Data APIs
YFINANCE_ENABLED=True
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
INVESTING_COM_ENABLED=True
YAHOO_FINANCE_ENABLED=True
MARKETSTACK_API_KEY=your_marketstack_api_key_here

# Web Search & Content APIs
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here
GOOGLE_SEARCH_MAX_RESULTS=10

# Academic Paper Search
ARXIV_ENABLED=True
ARXIV_MAX_RESULTS=20

# Security & Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
SESSION_EXPIRE_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.pdf,.txt,.md,.docx
UPLOAD_DIRECTORY=./uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Cache Configuration
CACHE_TYPE=memory
CACHE_DEFAULT_TIMEOUT=3600
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Performance Configuration
REQUEST_TIMEOUT_SECONDS=30
AI_PROCESSING_TIMEOUT_SECONDS=300
MARKET_DATA_CACHE_SECONDS=300
USER_DATA_PROCESSING_TIMEOUT=180

# Feature Flags
ENABLE_STRESS_TESTING=True
ENABLE_PORTFOLIO_OPTIMIZATION=True
ENABLE_REAL_TIME_DATA=True
ENABLE_MULTI_CURRENCY=True
ENABLE_ADVANCED_ANALYTICS=True

# Backup & Maintenance
AUTO_BACKUP_ENABLED=True
AUTO_BACKUP_INTERVAL_HOURS=24
DATABASE_CLEANUP_INTERVAL_HOURS=168
SESSION_CLEANUP_INTERVAL_HOURS=24

# Email Configuration (선택사항)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@assetrebalancing.com

# Webhook Configuration (선택사항)
WEBHOOK_ENABLED=False
WEBHOOK_URL=https://your-webhook-url.com/notify
WEBHOOK_SECRET=your_webhook_secret

# Monitoring & Analytics (선택사항)
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=False
ANALYTICS_API_KEY=your_analytics_key

# Development Configuration
MOCK_DATA_ENABLED=True
MOCK_AI_RESPONSES=False
BYPASS_RATE_LIMITS=True
ENABLE_PROFILING=False

# Production Configuration (production 환경에서 override)
# DEBUG=False
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# MOCK_DATA_ENABLED=False
# BYPASS_RATE_LIMITS=False